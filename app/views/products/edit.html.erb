<h1>Products#edit</h1>
<p>Find me in app/views/products/edit.html.erb</p>

<div class="container">
  <div class="row">
    <%= simple_form_for(@product) do |f| %>
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :activity, collection: ["Day Trip", "Dive"] %>
      <%= f.input :capacity %>
      <%= f.input :description %>
      <%= f.input :status, label: 'Active' %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
