<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>
<div class="container">
  <%= simple_form_for @product  do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :activity %>
    <%= f.input :capacity %>
    <%= f.input :photo, as: :file %>
    <%= f.input :status, label: 'Active' %>
    <%= f.submit %>
  <% end %>

</div>