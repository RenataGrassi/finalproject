<div class="form-container">
<%= simple_form_for [@product, @booking] do |f| %>
    <div class="header">
      <div class="header-row">
      <div class="big-bold" id="price" data-amount-cents="15000"><%= "R$ #{@product.price}" %></div>
      <div class="small-light"> / PARTICIPANT</div>
    </div>
    <%= f.input :date, label: "Choose a date to have fun!" %>
    <div class="flex-between">
      Participants:
      <div class="actions">
        <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
        <span id="counter" data-count="1">1</span>
        <a class="btn round-bordered incrementer" data-offset="1">+</a>
      </div>
    </div>
    <div class="header-row">
      <div class="big-bold" id="price" data-amount-cents="15000"><%= "Total R$ #{@product.price}" %></div>
    </div>
    <%= f.submit %>
<% end %>
</div>

