<div class="container mt-3">
  <h1><strong>Boat trips</strong> and <strong>scuba dive</strong> in Arraial do Cabo</h1>
  <div class="row">
    <div class="col-7">
      <% @products.each do |product| %>
        <ul>
          <li>
            <div class="card-product mt-3">
              <%= cl_image_tag product.photo.key%>
              <div class="card-product-infos">
                <%= link_to product_path(product) do %>
                  <h2> <%= product.name %> </h2>
                <% end %>
                <p>Venha conhecer o nosso <strong> <%= product.activity %></strong>.</p>
                <p>R$ <%= product.price %></p>
              </div>
            </div>
           </li>
        </ul>
      <% end %>
    </div>
      <div id='map' class="sticky mt-3"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key= "<%= ENV['MAPBOX_API_KEY'] %> "> 
    </div>
  </div>
</div>

     