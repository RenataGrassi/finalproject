<div class='container'>
<h1>You order history</h2>
<h3><strong>Confirmed</strong></h3>
 <div class="d-flex" >
  <i class="far fa-check-circle"></i>
  <%# <img src="https://i.pinimg.com/originals/f2/c4/c7/f2c4c70c31d250f920f3c9f0f6804a5a.jpg" /> %>
    <div >
      <ul>
        <% @pay_shopping_carts.each do |shopping_cart| %>
          <h4> <strong> Order number <%= shopping_cart.id %></strong> </h4>
          <% shopping_cart.bookings.each do |booking| %>
            <li>
              <h5><%= booking.product.name %></h5>
              R$ <%= booking.price %> for <%= "#{booking.guests.size+1} people" %>,
              made on <%= booking.updated_at %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
</div>
<p></p>
<p></p>
<h3><strong> Cancelled </strong></h3>
<div >
  <i class="far fa-window-close" ></i>
  <%# <img src="https://i.pinimg.com/originals/72/1f/e5/721fe5125e96eac682be7facba57a5ec.png" /> %>
    <div>
      <% @cancel_shopping_carts.each do |shopping_cart| %>
      <p> Order number <%= shopping_cart.id %> </p>
      <% shopping_cart.bookings.each do |booking| %>
      <li> 1x <%= booking.product.name %>,

      R$ <%= booking.product.price * booking.participants %>,
      made on <%= booking.updated_at %></li>
    <% end %>
  <% end %>
    </div>
  </div>
</div>

