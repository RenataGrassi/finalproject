<div class='container'>
  <h1><strong>Buyer:</strong> <%= @booking.shopping_cart.user.first_name %> <%=@booking.shopping_cart.user.last_name %></h1>
  <p><strong>Product: </strong><%= @booking.product.name %><p>
  <p><strong>Document: </strong><%= @booking.shopping_cart.user.document %></p>
  <p><strong>Address: </strong><%= @booking.shopping_cart.user.address %></p>
  <p><strong>Email: </strong><%= @booking.shopping_cart.user.email %></p>
  <p><strong>Phone number: </strong><%= @booking.shopping_cart.user.phone %></p>
  <p><strong>Guests:</strong>
  <% @booking.guests.each do |guest| %>
    <%= guest.name + ','%>
    <%end%></p>
  <p><strong>Date: </strong><%= @booking.date %></p>
  <p><strong>Status: </strong>
  <%= @booking.canceled ? "Canceled" : "Confirmed" %>
  <p><strong>Price: </strong><%= 'R$' + @booking.price.to_s%></p>
 

  <%= link_to 'Cancel', edit_company_booking_path(@booking.id), class: "btn btn-primary"  %>
  
</div>
